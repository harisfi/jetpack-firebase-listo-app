<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Listo" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/bright_orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/bright_orange</item>
        <item name="android:navigationBarColor">@color/bright_orange</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Listo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Listo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Listo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>